@model MyBlog.ViewModels.RegisterViewModel;

@{
    ViewData["Title"] = "Регистрация";
}

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Регистрация нового пользователя</h4>
        <form class="" asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-md-5">
                    <label for="email" class="form-label">Эл. адрес<span class="text-muted"> (используется для входа в систему)</span></label>
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="name@example.com" required="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <label for="pass1" class="form-label">Пароль</label>
                    <input asp-for="RegPassword" class="form-control" id="pass1" placeholder="*********" required="">
                    <span asp-validation-for="RegPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <label for="pass2" class="form-label">Пароль повторно</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="pass2" placeholder="*********" required="">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4 w-50">

            <button class="w-25 btn btn-primary btn-lg" type="submit">Регистрация</button>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}                    