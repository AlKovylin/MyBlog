@model MyBlog.ViewModels.RegisterViewModel;


@{
    ViewData["Title"] = "Регистрация нового пользователя";
}


<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Регистрация нового пользователя</h4>
        <form class="frm" asp-controller="Account" asp-action="Register" method="post">
            <div class="row g-3">
                <div class="col-12">
                    <label for="email" class="form-label">Эл. адрес<span class="text-muted">(для входа в систему)</span></label>
                    <div class="input-group has-validation">
                        <!--<span class="input-group-text"></span>-->
                        <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Имя пользователя" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Имя пользователя обязательно.
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <label for="pass" class="form-label">Пароль</label>
                    <input asp-for="Password" type="text" class="form-control" id="pass" placeholder="*********" required="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Пожалуйста, введите пароль.
                    </div>
                </div>

                <div class="col-12">
                    <label for="pass" class="form-label">Пароль</label>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" id="pass" placeholder="*********" required="">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Пожалуйста, введите пароль.
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Регистрация</button>
            </div>
        </form>
    </div>
</div>
