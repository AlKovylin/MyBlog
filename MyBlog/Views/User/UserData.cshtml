@model MyBlog.ViewModels.UserViewModel;

@{
    ViewData["Title"] = "Регистрация нового пользователя";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="row g-5">
    <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Регистрация нового пользователя</h4>
        <form class="" asp-controller="Account" asp-action="Save" method="post">
            <div>
                <input asp-for="id" type="hidden" />
            </div>
            <div class="row">
                <div class="col-md-5">
                    <label for="FirstName" class="form-label">Имя</label>
                    <div class="input-group has-validation">
                        <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="Ваше имя" value="@Model.FirstName" required="">
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <label for="LastName" class="form-label">Фамилия</label>
                    <div class="input-group has-validation">
                        <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Ваша фамилия" value="@Model.LastName" required="">
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <label for="email" class="form-label">Эл. адрес<span class="text-muted"> (для входа в систему)</span></label>
                    <div class="input-group has-validation">
                        <input asp-for="Email" type="text" class="form-control" id="email" placeholder="exampl@yandex.ru" value="@Model.Email" required="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <label for="email" class="form-label">Название вашего блога</label>
                    <div class="input-group has-validation">
                        <input asp-for="DisplayName" type="text" class="form-control" id="displayName" placeholder="пример: Компьютерный ботаник" value="@Model.DisplayName" required="">
                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <label for="email" class="form-label">О себе<span class="text-muted"> (расскажите о себе или о своём блоге)</span></label>
                    <div class="input-group has-validation">
                        <textarea asp-for="AboutMy" type="text" class="form-control" name="AboutMy" id="AboutMy" placeholder="exampl@yandex.ru" required=""></textarea>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <button class="w-25 btn btn-primary btn-lg" type="submit">Сохранить</button>
        </form>
    </div>
</div>
